# Maintainer: Ingo Meyer <IJ_M@gmx.de>

pkgname="playerctl-shift"
pkgver="$(git describe --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g')"
pkgrel="1"
pkgdesc="A convenience tool to shift to the next media player when using playerctl."
arch=("any")
url="https://gitlab.com/IngoMeyer/playerctl-shift"
license=("MIT")
depends=("playerctl")
makedepends=("make")
source=("playerctl-shift-${pkgver}.tar.gz")
sha256sums=("SKIP")

package() {
    cd "${srcdir}/${pkgname}-${pkgver}" || return
    make DESTDIR="${pkgdir}" PREFIX=/usr install
}
